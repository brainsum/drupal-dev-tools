{
    "name": "brainsum/drupal-dev-tools",
    "description": "Dev tools for Drupal development.",
    "type": "composer-plugin",
    "license": "gpl-3.0-or-later",
    "authors": [
        {
            "name": "mhavelant",
            "email": "mhavelant@brainsum.com"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "repositories": [
        {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        },
        {
            "type": "package",
            "package": {
                "name": "metadrop/grumphp-drupal-check",
                "type": "library",
                "version": "0.4.0",
                "source": {
                    "type": "git",
                    "url": "https://github.com/Metadrop/grumphp-drupal-check.git",
                    "reference": "05a70192155a21030ff63642035b531c88ccd45e"
                }
            }
        }
    ],
    "suggest": {
        "drupal/examples": "^4.0"
    },
    "require": {
        "php": ">=8.1",
        "composer-plugin-api": "^1.1 || ^2",
        "drupal/core-dev": "^9.4 || ^10.0.0",
        "drupal/devel": "^5.0",
        "ergebnis/composer-normalize": "^2.28",
        "friendsoftwig/twigcs": "^6.2",
        "metadrop/grumphp-drupal-check": "^0.4.0",
        "php-parallel-lint/php-parallel-lint": "^1.3",
        "roave/security-advisories": "dev-latest",
        "drupal-composer/drupal-security-advisories": "9.x-dev",
        "sebastian/phpcpd": "^6.0"
    },
    "config": {
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "Brainsum\\DrupalDevTools\\": "src/",
            "Brainsum\\DrupalDevTools\\Test\\": "test/",
            "Brainsum\\Twigcs\\": "brainsum_twigcs/src/"
        }
    },
    "extra": {
        "class": "Brainsum\\DrupalDevTools\\Composer\\Plugin\\DevToolsPlugin",
        "patches": {
            "metadrop/grumphp-drupal-check": {
                "Allow for more recent versions of grumphp": "https://patch-diff.githubusercontent.com/raw/Metadrop/grumphp-drupal-check/pull/10.diff"
            }
        }
    },
    "scripts": {
        "post-install-cmd": [
            "Brainsum\\DrupalDevTools\\Composer\\Script\\Install::setup"
        ],
        "post-update-cmd": [
            "Brainsum\\DrupalDevTools\\Composer\\Script\\Install::setup"
        ]
    }
}
